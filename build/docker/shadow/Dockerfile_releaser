FROM golang:1.17
ENV GO111MODULE on
# Install go debugger
RUN GO111MODULE=off go get -u github.com/go-delve/delve/cmd/dlv

FROM registry.cn-hangzhou.aliyuncs.com/rdc-incubator/shadow-base:v0.2.4
COPY shadow /usr/sbin/shadow
COPY --from=0 /go/bin/dlv /usr/sbin/dlv
COPY build/docker/shadow/run.sh /run.sh
RUN apt-get install -y net-tools && \
    chmod 755 /run.sh

ENTRYPOINT ["/run.sh"]
